
public class TOAProgram01 {

	public static void main(String[] args) {
		int row = 4, col = 5;
		createBoxPattern(row, col);

	}
	
	
	public static String createBoxPattern(int row, int col){
		if(row < 0 || col < 0){
			
		}
		String output = "";
		for(int i = 1; i <= row; i ++){
			for(int j = 1; j <= col; j++){
				if(i == 1 || i == row || j == 1 || j == col ){
					output = output + "*";
				}else{
					
					output = output + " ";
				}

			}
//			System.out.println();
			output = output + "\n";
		}
	}

}
