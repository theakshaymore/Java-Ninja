package day06;

import java.util.Scanner;

public class THAProgram01 {

	public static void main(String[] args) {
		
		
	 Scanner sc = new Scanner(System.in);
        System.out.print("Enter a time: ");
        String time = sc.nextLine();
        
        if (isValidTime(time)) {
            System.out.println("Valid Date");
        } else {
            System.out.println("Invalid Date");
        }
	}
	
	public static boolean isValidTime(String time) {
	    // Check if time is in the correct format
	    if (!time.matches("([01]?[0-9]|2[0-3]):[0-5][0-9]:[0-5][0-9]")) {
	        return false;
	    }
	    
	    
	    String[] parts = time.split(":");
	    int hours = Integer.valueOf(parts[0]);
	    int minutes = Integer.valueOf(parts[1]);
	    int seconds = Integer.valueOf(parts[2]);

	    // Check if the time is valid
	    if (hours < 0 || hours > 23) {
	        return false;
	    }
	    if (minutes < 0 || minutes > 59) {
	        return false;
	    }
	    if (seconds < 0 || seconds > 59) {
	        return false;
	    }
	    
	    // If the time passes all checks, return true
	    return true;
	}


}
