	public static void concateSumOfDigits(double num){
		
		String[] s = Double.toString(num).split("\\.");
		
		System.out.println(s[0].length());
		System.out.println(s[1].length());
		
		int sumOfLeft = 0, sumOfRight = 0;
		
		 int decimalIndex = s.indexOf('.');
		 
		 System.out.println(decimalIndex);
	
	}
	

