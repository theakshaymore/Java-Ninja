package day06;

public class THAProgram02 {

	public static void main(String[] args) {
		
		
		double num = 120.520;
		
		concateSumOfDigits(num);

	}
	
	
	public static void concateSumOfDigits(double num){
		int sumOfLeft = 0, sumOfRight = 0;
		double newNum = num;
		for(int i = 0; i < newNum; i++){
			int rem = (int)num % 10;
			if(i < newNum - 1){
				sumOfLeft = sumOfLeft + rem;

			}else{
				sumOfRight = sumOfRight * 10 + rem;
				
			}
			num = num /10;
		}
		System.out.println(sumOfLeft + " " + sumOfRight);
		
	}
	

}
