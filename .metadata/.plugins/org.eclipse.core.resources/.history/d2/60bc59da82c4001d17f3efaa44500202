package day05;

import java.util.*;

public class Self02 {

	public static void main(String[] args) {
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("Select the conversion yo want to do:");
		System.out.println("1. Fehrenheit to Celsius");
		System.out.println("2. Celsius to Fehrenheit");
		
		double input = sc.nextDouble();
		
		if(input == 1){
			System.out.println("Enter tem in fehrenheit: ");
			double fehrenheit = sc.nextInt();
			convertToCelsius(fehrenheit);
		}
		if(input == 2){
			System.out.println("Enter tem in celsius: ");
			double celsius = sc.nextInt();
			convertToFehrenheit(celsius);
		}
		

	}

	public static void convertToFehrenheit(double celsius) {
		double fahrenheit = (celsius * 9 / 5) + 32;
        System.out.printf("Fahrenheit: %.2f", fahrenheit);
		
	}

	public static void convertToCelsius(double fahrenheit) {
		 double celsius = (fahrenheit - 32) * 5 / 9;
	        System.out.printf("Celsius: %.2f", celsius);
		
	}

}
