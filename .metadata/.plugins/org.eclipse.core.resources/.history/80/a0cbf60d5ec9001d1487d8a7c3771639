package day08_GA;

public class FullTimeEmployee extends Employee {

	private double basic, bonus;

	public FullTimeEmployee() {
		super();
		
	}

	public FullTimeEmployee(int id, String firstname, String lastname, String address, double bonus, double basic) {
		super(id, firstname, lastname, address);
		this.basic = basic;
		this.bonus = bonus;
	}
	
	public double computeSal(){
		return basic * bonus;
	}
	
	
	
	@Override
	public String toString() {
		return "FullTimeEmployee [basic=" + basic + ", bonus=" + bonus + ", id=" + id + ", firstName=" + firstName
				+ ", lastName=" + lastName + ", address=" + address + ", computeSal()=" + computeSal() + "]";
	}

	public void showDetails(){
		System.out.println(super() + basic);
		System.out.println(basic);
	}
	
	

}
