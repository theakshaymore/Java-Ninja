package day06;

public class THAProgram02 {

	public static void main(String[] args) {
		
		
		double num = 120.121;
		
		String sum = concateSumOfDigits(num);
		System.out.println(sum);

	}
	
	
	public static String concateSumOfDigits(double num){
		
		 String[] parts = String.valueOf(num).split("\\.");
		    int leftSum = 0;
		    int rightSum = 0;
		    for (int i = 0; i < parts[0].length(); i++) {
		        leftSum += Character.getNumericValue(parts[0].charAt(i));
		    }
		    for (int i = 0; i < parts[1].length(); i++) {
		        rightSum += Character.getNumericValue(parts[1].charAt(i));
		    }
		    
	
		    return leftSum + ":" + rightSum;
	
	}
}
