package weekexam;
import java.util.Scanner;
public class PP {

	public static void main(String[] args) {
	
//		Scanner sc = new Scanner(System.in);
//        System.out.print("Enter a number: ");
//        int num = sc.nextInt();
//        sc.close();
		int num = 7;
        int temp = num;
        int rev = 0;
        while (temp > 0) {
            int digit = temp % 10;
            rev = rev * 10 + digit;
            temp /= 10;
        }
        if (num == rev) {
            System.out.println("The number " + num + " is already a palindrome.");
        } else {
            int diff = 0;
            while (num > 0) {
                int digit = num % 10;
                int revDigit = rev % 10;
                if (digit != revDigit) {
                    diff += Math.abs(digit - revDigit);
                }
                num /= 10;
                rev /= 10;
            }
            System.out.println("The difference in digits to make the number palindrome is: " + diff);
        }
	}

}


