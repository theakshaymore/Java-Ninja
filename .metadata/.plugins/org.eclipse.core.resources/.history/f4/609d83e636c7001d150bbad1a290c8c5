	    int min = Integer.valueOf(parts[1]);
	    int sec = Integer.valueOf(parts[2]);

	    
	    if (hrs < 0 || hrs > 23) {
	        return false;
	    }
	    if (min < 0 || min > 59) {
	        return false;
	    }
	    if (sec < 0 || sec > 59) {
	        return false;
	    }
	    
	    return true;
	}


}
