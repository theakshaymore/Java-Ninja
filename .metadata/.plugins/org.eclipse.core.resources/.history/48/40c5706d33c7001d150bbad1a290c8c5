package day06;

public class THAProgram02 {

	public static void main(String[] args) {
		
		
		double num = 120.121;
		
		String sum = concateSumOfDigits(num);
		System.out.println(sum);

	}
	
	
	public static String concateSumOfDigits(double num){
		
		 String[] parts = String.valueOf(num).split("\\.");
		    int sumOfLeft = 0;
		    int sumOfRight = 0;
		    for (int i = 0; i < parts[0].length(); i++) {
		    	sumOfLeft = sumOfLeft + Character.getNumericValue(parts[0].charAt(i));
		    }
		    for (int i = 0; i < parts[1].length(); i++) {
		    	sumOfRight = sumOfRight + Character.getNumericValue(parts[1].charAt(i));
		    }
		    
	
		    return (sumOfLeft + ":" + sumOfRight);
	
	}
	
	
	
}
